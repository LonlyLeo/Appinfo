<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.one.dao.AppDao">
    <select id="queryApp" resultType="AppInfo" parameterType="com.one.entity.QueryBean">
    select * from app_info where 1 = 1
    <if test="#{queryBean.softwareName} != null">
        and softwareName like concat("%",#{queryBean.softwareName},"%")
    </if>
    <if test="queryBean.status != null">
        and status = #{queryBean.status}
    </if>
    <if test="flatForm != null">
        and fla
    </if>
</select>
</mapper>